{
  "extends": ["airbnb-base", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "quotes": "off",
    "no-tabs": "off",
    "comma-dangle": "off",
    "operator-linebreak": "off",
    "implicit-arrow-linebreak": "off",
    "@typescript-eslint/indent": "off",
    "max-len": ["error", {
      "code": 255
    }],
    "arrow-body-style": "off",
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "env": {
    "mocha": true,
    "node": true,
    "browser": true,
  },
}
